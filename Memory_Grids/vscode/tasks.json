{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: gcc.exe 生成活动文件",
			"command": "gcc",
			"args": [
				"-O2",
				"-g",
				"${workspaceFolder}/*.c",
				"-IC:/MinGW/include",  //如果要编译，替换成你的路径
				"-LC:/MinGW/lib",
				"-lSDL3",
				"-o",
				"${workspaceFolder}/output/${workspaceRootFolderName}.exe"
			],
			"options": {
				"cwd": "C:/MinGW/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build",
			"detail": "编译器: C:/MinGW/bin/gcc.exe"
		}
	]
}
